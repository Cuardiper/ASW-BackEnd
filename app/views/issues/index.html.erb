<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<p>Filter by: &nbsp <%= link_to 'All', issues_path %> &nbsp <%= link_to 'Unresolved', issues_path(:status => ['new','open']) %> &nbsp My issues  &nbsp Watching </p>
<br>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Votes</th>
      <th>Assignee</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= link_to issue.type_issue, issues_path(:type_issue => [issue.type_issue]) %></td>
        <td><%= link_to issue.priority, issues_path(:priority => [issue.priority]) %></td>
        <td><%= link_to issue.status, issues_path(:status => [issue.status]) %></td>
        <td><%= issue.votes %></td>
        <% if issue.assignee_id != nil %>
          <td><%= User.all.find(issue.assignee_id).name %></td>
        <% else %>
           <td></td>
        <% end %>
        <td><%= issue.created_at.in_time_zone('Madrid').to_formatted_s(:long) %></td>
        <td><%= issue.updated_at.in_time_zone('Madrid').to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

