<div class="page-header"><h1>Upload File</h1></div>

<%= form_for @attachment, url: attachments_path, html: { multipart: true } do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@attachment.errors.count, "error")} prohibited this attachment from being saved:" %>
      </h2>
      <ul>
        <% @attachment.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= text_field :title, id: :attachment_title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>

  <div class="field">
    <%= f.submit 'Upload Attachment' %>
  </div>
<% end %>